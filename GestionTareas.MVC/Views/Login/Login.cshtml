@model GestionTareas.MVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: #7fdbff; /* celeste aqua */
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .login-container {
        background: #fff;
        padding: 2rem 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 16px 0 rgba(31, 38, 135, 0.10);
        max-width: 320px;
        margin: 60px auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .login-title {
        font-size: 1.5rem;
        font-weight: 500;
        color: #2980b9;
        margin-bottom: 1rem;
    }
    .form-group {
        width: 100%;
        margin-bottom: 1rem;
    }
    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 0.2rem;
        display: block;
    }
    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #b2bec3;
        border-radius: 6px;
        font-size: 1rem;
    }
    .btn-login {
        width: 100%;
        padding: 0.6rem;
        background: #2980b9;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
    }
    .btn-login:hover {
        background: #2574a9;
    }
    .login-footer {
        margin-top: 1rem;
        color: #636e72;
        font-size: 0.95rem;
    }
</style>

<div class="login-container">
    <div class="login-title">Login</div>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn-login">Entrar</button>
        <span asp-validation-summary="All" class="text-danger"></span>
    </form>
    <div class="login-footer">
        ¿No tienes cuenta? <a href="#">Regístrate</a>
    </div>
</div>
